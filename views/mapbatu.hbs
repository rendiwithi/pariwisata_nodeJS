    <script>
      function initMap(sumbux, sumbuy) { let propertiPeta = { center: new
      google.maps.LatLng(sumbux, sumbuy), zoom: 10, mapTypeId:
      google.maps.MapTypeId.ROADMAP, }; let peta = new google.maps.Map(
      document.getElementById("googleMap"), propertiPeta ); // Membuat marker
      let marker = new google.maps.Marker({ position: new
      google.maps.LatLng(sumbux, sumbuy), map: peta, animation:
      google.maps.Animation.BOUNCE, }); } let sumbux = -7.8872833; let sumbuy =
      112.5322317; google.maps.event.addDomListener(window, "load",
      initMap(sumbux, sumbuy));
    </script>
